<p id="notice"><%= notice %></p>

<h1>Trucks</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Placa</th>
      <th>Modelo</th>
      <th>Marca</th>
      <th>Driver id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trucks.each do |truck| %>
      <tr>
        <td><%= truck.Id %></td>
        <td><%= truck.Placa %></td>
        <td><%= truck.Modelo %></td>
        <td><%= truck.Marca %></td>
        <td><%= truck.Driver_Id %></td>
        <td><%= link_to 'Show', truck %></td>
        <td><%= link_to 'Edit', edit_truck_path(truck) %></td>
        <td><%= link_to 'Destroy', truck, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

