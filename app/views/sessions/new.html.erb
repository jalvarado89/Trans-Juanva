	                <label class="checkbox pull-left">
	                    <input type="checkbox" value="remember-me">Remember me
	                </label>	                
			      <% end %>
	            </div>
	            <a href="<%= new_user_path %>" class="text-center new-account">Create an account </a>
	        </div>
	    </div>
   </div>