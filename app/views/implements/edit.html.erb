<div class="container">
	<div class="row">
    	<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" > 
	    	<div class="panel panel-info">
			    <div class="panel-heading">
			       	<h3 class="panel-title">Editar Implemento</h3>
			    </div>
	          	<div class="panel-body">
	          		<div class="row">
	          			<div class="col-md-3 col-lg-3 " align="center"></div><!--imagen-->
		          			<div class=" col-md-9 col-lg-9 ">
							    <div class="form-area">
							    <%= form_for(@implement, url: implement_path) do |f| %>
							       	<br style="clear:both">
							        <div class="form-group">
							            <%= f.text_field :Num_Chasis, class: "form-control", placeholder: "Numero de Chasis", :required => true %>
							        </div>
							        <div class="form-group">
								        <%= f.text_field :Num_Placa, class: "form-control", placeholder: "Numero de Placa", :required => true %>
								    </div>
							        <div class="form-group">
							          	<%= f.text_field :Empresa, class: "form-control", placeholder: "Empresa", :required => true %>
							        </div>								    
							        <div class="form-group">
							        	<%= f.select :trucks_id, options_from_collection_for_select(Truck.all, :id, :Placa, @implement.trucks_id) %>							          	
							        </div>		          
								    <%= f.submit "Submit", class: "btn btn-primary pull-right" %>
							        <% end %>
							    </div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
