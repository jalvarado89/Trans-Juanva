<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >
			<div class="panel panel-info">
				<div class="panel-heading">
					<h3 class="panel-title">Editar/Activar Usuario</h3>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-md-3 col-lg-3 " align="center"></div><!--imagen-->
						<div class=" col-md-9 col-lg-9 ">
							<div class="form-area"> 
								<%= form_for(@user, url: user_path) do |f| %>
								<br style="clear:both">
								<div class="form-group">
									<%= f.label :Nombre %>
									<%= f.text_field :Nombre, class: "form-control", placeholder: "Nombre", :required => true %>
								</div>
								<div class="form-group">
									<%= f.label :Apellidos %>
									<%= f.text_field :Apellidos, class: "form-control", placeholder: "Apellidos", :required => true %>
								</div>								
								<div class="form-group">
									<%= f.label :Telefono %>
									<%= f.text_field :Telefono, class: "form-control", placeholder: "Telefono", :required => true %>
								</div>
								<div class="form-group">
									<%= f.label :email %>
									<%= f.email_field :email, class: "form-control", placeholder: "Email", :required => true %>
								</div>
								<div class="form-group">
									<%= f.label :Password %>
									<%= f.text_field :password_digest, class: "form-control", placeholder: "Password", :required => true %>
								</div>
								<div class="form-group">
									<%= f.label :Activo %>
									<%= f.check_box(:Activo, {:value => "@user.Activo"}) %>
								</div>
								<div class="form-group">
									<%= f.label :Tipo %>
									<%= f.select :tipo, options_for_select([["--Seleccione--", ""], "Invitado", "Administrador"]), :class => 'form-control' %>
								</div>
								<div class="form-group">
									<%= f.label :companies_id %>
									<%= f.select :companies_id, options_from_collection_for_select(Company.all, :id, :Nombre, @user.companies_id) %>									
								</div>
								<%= f.submit "Submit", class: "btn btn-primary pull-right" %>
								<% end %>
							</div>
						</div>
						</div>
					</div>
				</div> 
			</div>
		</div>
	</div>
</div>