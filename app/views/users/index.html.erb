<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-xs-10 col-sm-10 col-md-5 col-lg-5 col-xs-offset-0 col-sm-offset-0 col-md-offset-2 col-lg-offset-2 toppad" >    
        <div class="panel-heading">
          <div class="span5">
          <table class="table table-striped table-condensed">
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Apellidos</th>                
                <th>Telefono</th>
                <th>Email</th>
                <th>Password</th>
                <th>Tipo</th>
                <th>Activo</th>
                <th>Empresa</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @users.each do |user| %>
                <tr>
                  <td><%= user.Nombre %></td>
                  <td><%= user.Apellidos %></td>                  
                  <td><%= user.Telefono %></td>
                  <td><%= user.email %></td>
                  <td><%= user.password_digest %></td>
                  <td><%= user.tipo %></td>                  
                  <% if user.Activo %>
                    <td>Si</td>
                  <% else %>
                    <td>No</td>
                  <% end %>
                  <td><%= Company.find(user.companies_id).Nombre %></td>                  
                  <td><%= link_to 'Edit', edit_user_path(user) %></td>
                  <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
          </div>
        </div>
      </div>
    </div>
</div>