<div class="row">
  <div class="col-md-6 col-md-offset-3">
		<h1>New User</h1>

			<%= form_for(:user, url: signup_new_path) do |f| %>
		      <%= f.label :Nombre %>
		      <%= f.text_field :Nombre %>		      
		      <br>
		      <%= f.label :Apellidos %>
		      <%= f.text_field :Apellidos %>
		      <br>
		      <%= f.label :Empresa %>
		      <%= f.text_field :Empresa %>
		      <br>
		      <%= f.label :Telefono %>
		      <%= f.text_field :Telefono %>
		      <br>
		      <%= f.label :email %>
              <%= f.email_field :email %>
		      <br>
		      <%= f.label :Password %>
		      <%= f.password_field :password_digest %>
		      <br>
		      <%= f.submit "Create my account", class: "btn btn-primary" %>
		    <% end %>
  </div>
</div>