    <title>Transportes Juanva</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width-device-width, initial-scale-1.0">
    <link rel="icon" type="image/png" href="<%= asset_path 'Trans_Juanva16x16.ico' %>" />

    <%= stylesheet_link_tag 'boostrap.min.scss' %>
