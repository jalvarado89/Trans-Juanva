              <li><a href="/">Home</a></li>                            
              <li><a href="/login">Sing In</a></li>
              <% if current_user %>
                Logged in as <%= current_user.email %>.
                <%= link_to "Log out", logout_path %>
              <% else %>
                <%= link_to "Sign up", sign_up_path %> or
                <%= link_to "log in", log_in_path %>
              <% end %>
            </ul>
            </nav>          
        </div>        

    <%= yield %>

