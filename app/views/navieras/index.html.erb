<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >    
        <div class="panel-heading">
          <div class="span5">
              <table class="table table-striped table-condensed">
                <thead>
                  <tr>      
                    <th>Nombre</th>
                    <th>Telefono</th>
                    <th>Correo</th>
                    <th>Direccion</th>
                    <th>Empresa</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @navieras.each do |naviera| %>
                    <tr>
                      <td><%= naviera.Nombre %></td>
                      <td><%= naviera.Telefono %></td>
                      <td><%= naviera.Correo %></td>
                      <td><%= naviera.Direccion %></td>
                      <td><%= Company.find(naviera.companies_id).Nombre %></td>
                      <td><%= link_to 'Show', naviera %></td>
                      <td><%= link_to 'Edit', edit_naviera_path(naviera) %></td>
                      <td><%= link_to 'Destroy', naviera, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
          </div>
        </div>
      </div>
    </div>
</div>