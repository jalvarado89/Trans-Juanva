<p id="notice"><%= notice %></p>    
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >    
        <div class="panel-heading">
          <div class="span5">
            <table class="table table-striped table-condensed">
                  <thead>
                  <tr>      
                    <th>Nombre</th>
                    <th>Cedula</th>
                    <th>Telefono</th>
                    <th colspan="3"></th>
                  </tr>
              </thead>   
              <tbody>
                <% @drivers.each do |driver| %>
                  <tr>        
                    <td><%= driver.Nombre %></td>
                    <td><%= driver.Cedula %></td>
                    <td><%= driver.Telefono %></td>
                    <td><%= link_to 'Mostrar', driver %></td>
                    <td><%= link_to 'Editar', edit_driver_path(driver) %></td>
                    <td><%= link_to 'Eliminar', driver, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>      
    </div>
  </div>
</div>