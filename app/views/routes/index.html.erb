<p id="notice"><%= notice %></p>

<h1>Rutas</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Nombre</th>
      <th>Precio empresa</th>
      <th>Precio chofer</th>
      <th>Id empresa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @routes.each do |route| %>
      <tr>
        <td><%= route.Id %></td>
        <td><%= route.Nombre %></td>
        <td><%= route.Precio_Empresa %></td>
        <td><%= route.Precio_Chofer %></td>
        <td><%= route.Id_Empresa %></td>
        <td><%= link_to 'Show', route %></td>
        <td><%= link_to 'Edit', edit_route_path(route) %></td>
        <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
