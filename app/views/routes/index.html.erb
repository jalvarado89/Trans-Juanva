<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >    
        <div class="panel-heading">
          <div class="span5">
              <table class="table table-striped table-condensed">
                <thead>
                  <tr>      
                    <th>Nombre</th>                    
                    <th>Precio Empresa</th>
                    <th>Precio Chofer</th>
                    <th>Empresa</th>
                    <th colspan="3"></th>
                  </tr>
                </thead>

                <tbody>
                  <% @routes.each do |route| %>
                    <tr>
                      <td><%= route.Nombre %></td>
                      <td><%= route.Precio_Empresa %></td>
                      <td><%= route.Precio_Chofer %></td>
                      <td><%= Company.find(route.companies_id).Nombre %></td>
                      <td><%= link_to 'Show', route %></td>
                      <td><%= link_to 'Edit', edit_route_path(route) %></td>
                      <td><%= link_to 'Destroy', route, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
          </div>
        </div>
      </div>
    </div>
</div>