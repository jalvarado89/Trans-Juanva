<div class="container">
	<div class="row">
    	<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" > 
	    	<div class="panel panel-info">
			    <div class="panel-heading">
			       	<h3 class="panel-title">Editar Ruta</h3>
			    </div>
	          	<div class="panel-body">
	          		<div class="row">
	          			<div class="col-md-3 col-lg-3 " align="center"></div><!--imagen-->
		          			<div class=" col-md-9 col-lg-9 ">
							    <div class="form-area">
							    <%= form_for(@route, url: route_path) do |f| %>
							       	<br style="clear:both">
							        <div class="form-group">
							            <%= f.text_field :Nombre, class: "form-control", placeholder: "Nombre", :required => true %>
							        </div>
							        <div class="form-group">
								        <%= f.text_field :Precio_Empresa, class: "form-control", placeholder: "Precio de Finca", :required => true %>
								    </div>
							        <div class="form-group">
							          	<%= f.text_field :Precio_Chofer, class: "form-control", placeholder: "Precio para Chofer", :required => true %>
							        </div>							        
							        <div class="form-group">
							        	 <%= f.select :companies_id, options_from_collection_for_select(Company.all, :id, :Nombre, @route.companies_id) %>
							        </div>		          
								    <%= f.submit "Submit", class: "btn btn-primary pull-right" %>
							        <% end %>
							    </div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>