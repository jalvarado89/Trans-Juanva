<div class="container">
	<div class="row">
    	<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" > 
	    	<div class="panel panel-info">
		    <div class="panel-heading">
		       	<h3 class="panel-title">Nueva Ruta</h3>
		    </div>
	          	<div class="panel-body">
	          		<div class="row">
	          			<div class="col-md-3 col-lg-3 " align="center"></div><!--imagen-->
		          			<div class=" col-md-9 col-lg-9 ">
				    			<div class="form-area">
						        <%= form_for(@route, url: routes_path) do |f| %>
						        	<br style="clear:both">
						              	<div class="form-group">
							            <%= f.text_field :Nombre, class: "form-control", placeholder: "Nombre", :required => true %>
								        </div>
								        <div class="form-group">
								        <%= f.text_field :Precio_Empresa_2Ejes, class: "form-control", placeholder: "Precio de Finca 2 ejes", :required => true %>
									    </div>
									    <div class="form-group">
								        <%= f.text_field :Precio_Empresa_3Ejes, class: "form-control", placeholder: "Precio de Finca 3 ejes", :required => true %>
									    </div>
								        <div class="form-group">
								          	<%= f.text_field :Precio_Chofer, class: "form-control", placeholder: "Precio para Chofer", :required => true %>
								        </div>
								        <div class="form-group">
								        	<%= f.collection_select(:companies_id, Company.all, :id, :Nombre, prompt: true) %>								          	
								        </div>
							    	<%= f.submit "Submit", class: "btn btn-primary pull-right" %>
						        <% end %>
						        </div>
					        </div>
				        </div>
				    </div>
				</div>
			</div>
		</div>
	</div>
</div>